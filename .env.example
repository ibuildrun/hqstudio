# ===========================================
# HQ Studio - Environment Variables
# ===========================================
# Скопируйте этот файл в .env и заполните значения

# -------------------------------------------
# API Configuration
# -------------------------------------------

# База данных (PostgreSQL для production, SQLite для development)
# Для SQLite: Data Source=hqstudio.db
# Для PostgreSQL: Host=localhost;Database=hqstudio;Username=postgres;Password=your_password
CONNECTION_STRING=Data Source=hqstudio.db

# JWT Authentication
JWT_KEY=your-super-secret-key-min-32-characters-long
JWT_ISSUER=HQStudio
JWT_AUDIENCE=HQStudioClients
JWT_EXPIRE_HOURS=24

# API Server
API_PORT=5000
API_HOST=localhost

# -------------------------------------------
# Web Application
# -------------------------------------------

# API URL для фронтенда
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Google Gemini AI (для AI-функций)
GEMINI_API_KEY=your-gemini-api-key

# Tuna Tunnel (для публичного доступа)
TUNA_TOKEN=your-tuna-token
TUNA_SUBDOMAIN=hqstudio

# -------------------------------------------
# Desktop Application
# -------------------------------------------

# API URL для десктопа
DESKTOP_API_URL=http://localhost:5000

# -------------------------------------------
# Docker / Production
# -------------------------------------------

# PostgreSQL (для docker-compose)
POSTGRES_USER=hqstudio
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=hqstudio

# Порты
WEB_PORT=3000
API_PORT=5000
