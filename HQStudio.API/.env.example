# HQ Studio API - Environment Variables
# Скопируйте в .env и заполните значения

# Database Connection
# SQLite (development):
CONNECTION_STRING=Data Source=hqstudio.db

# PostgreSQL (production):
# CONNECTION_STRING=Host=localhost;Database=hqstudio;Username=postgres;Password=your_password

# JWT Configuration
JWT_KEY=your-super-secret-key-minimum-32-characters
JWT_ISSUER=HQStudio
JWT_AUDIENCE=HQStudioClients
JWT_EXPIRE_HOURS=24

# Server
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://localhost:5000

# CORS (разделённые запятой домены)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Logging
LOG_LEVEL=Information
