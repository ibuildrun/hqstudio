<Window x:Class="HQStudio.Views.Dialogs.EditUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование сотрудника" 
        Height="520" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        FocusManager.FocusedElement="{Binding ElementName=DisplayNameBox}">

    <Border Background="{DynamicResource BgDialogBrush}" CornerRadius="16" BorderBrush="{DynamicResource BorderDefaultBrush}" BorderThickness="1">

        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource BgDialogHeaderBrush}" CornerRadius="16,16,0,0" 
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock x:Name="TitleText" Text="Новый сотрудник" FontSize="15" FontWeight="SemiBold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="20,0"/>
                    <Button Content="✕" HorizontalAlignment="Right" Click="Close_Click"
                            Background="Transparent" Foreground="#606060" BorderThickness="0"
                            Width="50" Height="50" FontSize="14" Cursor="Hand"/>
                </Grid>
            </Border>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="24,20">
                <StackPanel>
                    <TextBlock Text="ИМЯ СОТРУДНИКА" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <TextBox x:Name="DisplayNameBox" Style="{DynamicResource InputText}" Margin="0,0,0,16"/>

                    <TextBlock Text="ЛОГИН" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <TextBox x:Name="UsernameBox" Style="{DynamicResource InputText}" Margin="0,0,0,16"
                             CharacterCasing="Lower"/>

                    <TextBlock Text="ПАРОЛЬ" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <PasswordBox x:Name="PasswordBox" Style="{DynamicResource InputPassword}" Margin="0,0,0,16"/>

                    <TextBlock Text="РОЛЬ" Style="{DynamicResource TextLabel}" Margin="0,0,0,8"/>
                    <ComboBox x:Name="RoleCombo" Style="{DynamicResource InputComboBox}" Margin="0,0,0,16">
                        <ComboBoxItem Content="Администратор"/>
                        <ComboBoxItem Content="Работник" IsSelected="True"/>
                    </ComboBox>

                    <Border Background="#141414" CornerRadius="10" Padding="16,12" Margin="0,8,0,0">
                        <CheckBox x:Name="IsActiveCheck" IsChecked="True">
                            <CheckBox.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Активный сотрудник" Foreground="{DynamicResource TextPrimaryBrush}" FontSize="14"/>
                                </StackPanel>
                            </CheckBox.Content>
                        </CheckBox>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="{DynamicResource BgDialogHeaderBrush}" Padding="24,16" CornerRadius="0,0,16,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="Отмена" Style="{DynamicResource BtnSecondary}" 
                            Click="Cancel_Click" Margin="0,0,8,0" IsCancel="True"/>
                    <Button Grid.Column="1" Content="Сохранить" Style="{DynamicResource BtnPrimary}" 
                            Click="Save_Click" Margin="8,0,0,0" IsDefault="True"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
