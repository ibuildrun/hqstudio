<UserControl x:Class="HQStudio.Controls.ToastContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:services="clr-namespace:HQStudio.Services">
    
    <UserControl.Resources>
        <!-- Toast Type to Color Converter -->
        <Style x:Key="ToastBorder" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="MinWidth" Value="280"/>
            <Setter Property="MaxWidth" Value="400"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="3" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Toast Style -->
        <Style x:Key="SuccessToast" TargetType="Border" BasedOn="{StaticResource ToastBorder}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A3D2E" Offset="0"/>
                        <GradientStop Color="#1E4D38" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#2D6B4F"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Info Toast Style -->
        <Style x:Key="InfoToast" TargetType="Border" BasedOn="{StaticResource ToastBorder}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#1A2D3D" Offset="0"/>
                        <GradientStop Color="#1E384D" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#2D4F6B"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Warning Toast Style -->
        <Style x:Key="WarningToast" TargetType="Border" BasedOn="{StaticResource ToastBorder}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#3D3A1A" Offset="0"/>
                        <GradientStop Color="#4D481E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#6B5F2D"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Error Toast Style -->
        <Style x:Key="ErrorToast" TargetType="Border" BasedOn="{StaticResource ToastBorder}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#3D1A1A" Offset="0"/>
                        <GradientStop Color="#4D1E1E" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#6B2D2D"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Close Button Style -->
        <Style x:Key="ToastCloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <TextBlock Text="✕" FontSize="12" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <!-- Toast Container - positioned in bottom-right -->
    <ItemsControl x:Name="ToastList" 
                  ItemsSource="{Binding Notifications, Source={x:Static services:ToastService.Instance}}"
                  HorizontalAlignment="Right" 
                  VerticalAlignment="Bottom"
                  Margin="0,0,20,20">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Vertical"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="{x:Type services:ToastNotification}">
                <Border x:Name="ToastBorder" Style="{StaticResource InfoToast}"
                        RenderTransformOrigin="1,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                            <TranslateTransform X="0"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <!-- Появление -->
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                     From="0" To="1" Duration="0:0:0.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Children[1].X"
                                                     From="50" To="0" Duration="0:0:0.3">
                                        <DoubleAnimation.EasingFunction>
                                            <QuadraticEase EasingMode="EaseOut"/>
                                        </DoubleAnimation.EasingFunction>
                                    </DoubleAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Border.Triggers>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <TextBlock x:Name="ToastIcon" Grid.Column="0" 
                                   FontSize="18" Margin="0,0,12,0" 
                                   VerticalAlignment="Center"
                                   Text="ℹ️"/>
                        
                        <!-- Message -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding Message}" 
                                   Foreground="White"
                                   FontSize="13"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                        
                        <!-- Close Button -->
                        <Button Grid.Column="2" 
                                Style="{StaticResource ToastCloseButton}"
                                Margin="12,0,0,0"
                                Click="CloseButton_Click"
                                Tag="{Binding}"/>
                    </Grid>
                </Border>
                
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Type}" Value="Success">
                        <Setter TargetName="ToastBorder" Property="Style" Value="{StaticResource SuccessToast}"/>
                        <Setter TargetName="ToastIcon" Property="Text" Value="✓"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Type}" Value="Info">
                        <Setter TargetName="ToastBorder" Property="Style" Value="{StaticResource InfoToast}"/>
                        <Setter TargetName="ToastIcon" Property="Text" Value="ℹ"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Type}" Value="Warning">
                        <Setter TargetName="ToastBorder" Property="Style" Value="{StaticResource WarningToast}"/>
                        <Setter TargetName="ToastIcon" Property="Text" Value="⚠"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Type}" Value="Error">
                        <Setter TargetName="ToastBorder" Property="Style" Value="{StaticResource ErrorToast}"/>
                        <Setter TargetName="ToastIcon" Property="Text" Value="✕"/>
                    </DataTrigger>
                    <!-- Fade out when IsVisible becomes false -->
                    <DataTrigger Binding="{Binding IsVisible}" Value="False">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="ToastBorder"
                                                     Storyboard.TargetProperty="Opacity"
                                                     To="0" Duration="0:0:0.25"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
