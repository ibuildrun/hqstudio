<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- HQ Studio Dark Theme Colors -->
    <Color x:Key="PrimaryBlack">#0A0A0A</Color>
    <Color x:Key="SecondaryBlack">#141414</Color>
    <Color x:Key="TertiaryBlack">#1E1E1E</Color>
    <Color x:Key="CardBackground">#1A1A1A</Color>
    <Color x:Key="PrimaryWhite">#FFFFFF</Color>
    <Color x:Key="SecondaryWhite">#E0E0E0</Color>
    <Color x:Key="AccentGray">#3A3A3A</Color>
    <Color x:Key="HoverGray">#2A2A2A</Color>
    <Color x:Key="GlowWhite">#FFFFFF</Color>
    
    <!-- Solid Brushes -->
    <SolidColorBrush x:Key="PrimaryBlackBrush" Color="{StaticResource PrimaryBlack}"/>
    <SolidColorBrush x:Key="SecondaryBlackBrush" Color="{StaticResource SecondaryBlack}"/>
    <SolidColorBrush x:Key="TertiaryBlackBrush" Color="{StaticResource TertiaryBlack}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="PrimaryWhiteBrush" Color="{StaticResource PrimaryWhite}"/>
    <SolidColorBrush x:Key="SecondaryWhiteBrush" Color="{StaticResource SecondaryWhite}"/>
    <SolidColorBrush x:Key="AccentGrayBrush" Color="{StaticResource AccentGray}"/>
    <SolidColorBrush x:Key="HoverGrayBrush" Color="{StaticResource HoverGray}"/>
    
    <!-- Gradient Brushes for WOW effect -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A0A0A" Offset="0"/>
        <GradientStop Color="#1A1A1A" Offset="0.5"/>
        <GradientStop Color="#0A0A0A" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1A1A1A" Offset="0"/>
        <GradientStop Color="#252525" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GlowGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FFFFFF" Offset="0"/>
        <GradientStop Color="#808080" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SidebarGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0D0D0D" Offset="0"/>
        <GradientStop Color="#151515" Offset="1"/>
    </LinearGradientBrush>
    
    <!-- Glow Effect for Premium Feel -->
    <DropShadowEffect x:Key="WhiteGlow" Color="White" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
    <DropShadowEffect x:Key="SubtleGlow" Color="White" BlurRadius="8" ShadowDepth="0" Opacity="0.15"/>
    <DropShadowEffect x:Key="CardShadow" Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
    
</ResourceDictionary>
